<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>crud_crear</servlet-name>
        <servlet-class>servlet.crud_crear</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>crud_modificar</servlet-name>
        <servlet-class>servlet.crud_modificar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>crud_eliminar</servlet-name>
        <servlet-class>servlet.crud_eliminar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>crud_crear</servlet-name>
        <url-pattern>/crud_crear</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>crud_modificar</servlet-name>
        <url-pattern>/crud_modificar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>crud_eliminar</servlet-name>
        <url-pattern>/crud_eliminar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
